<h1>Sign Up</h1>

<!-- If the user makes any errors they will show up here. -->
<% if @user.errors.any?  %>
  <b>Error(s):</b>
  <ol>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ol>
<% end %>

<%= form_for @user do |f| %>

  <fieldset>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </fieldset>
  <fieldset>
    <%= f.label :firstname, "First Name" %>
    <%= f.text_field :firstname %>
  </fieldset>
  <fieldset>
    <%= f.label :lastname, "Last Name" %>
    <%= f.text_field :lastname %>
  </fieldset>
  <fieldset>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </fieldset>
  <fieldset>
    <%= f.label :dob %>
    <%= f.date_field :dob %>
  </fieldset>
  <fieldset>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </fieldset>
  <fieldset>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </fieldset>
  <%= f.submit "Sign Up!" %>
<% end %>
